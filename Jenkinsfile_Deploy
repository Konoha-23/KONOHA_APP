pipeline{
    agent { 
        label 'terra'
  }
    stages{
        //stage('Clone Code'){
        //    steps{
        //        sh "echo cloning code"
        //        sh "echo clone code complete"
        //        git 'https://github.com/Ohubabs/KONOHA_APP.git'
        //    }
        //}
        stage('Create konoha ClusterIssuer'){
            steps{
              sh "echo 'Create Cluster Issuer for Mattermost'"
              sh "kubectl apply -f konoha-issuer.yml"   
            }
        }
        stage('Initialize Terraform'){
            steps{
                sh "echo 'Deploy Tesla To Cluster'"
                sh "terraform init"
            }
        }
        stage('Deploy Tesla To EKS'){
            steps{
                sh "echo 'Deploy Tesla To Cluster'"
                sh "terraform validate"
                sh "terraform plan"
                sh "terraform apply --auto-approve" //Swap "apply" with "destroy" when deleting resources
            }
        }
    }
}
