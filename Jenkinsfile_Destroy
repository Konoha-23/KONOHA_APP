pipeline{
    agent { 
        label 'terra'
  }
    stages{
        stage('Delete konoha ClusterIssuer'){
            steps{
              sh "echo 'Create Cluster Issuer for Konoha'"
              sh "kubectl delete -f konoha-issuer.yml"   
            }
        }
        stage('Destroy Konoha Web Server Today'){
            steps{
                sh "echo 'Deploy Tesla To Cluster'"
                sh "terraform init"
                sh "terraform destroy --auto-approve" 
            }
        }
    }
}
